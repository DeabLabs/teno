{
	// Mapped from https://www.typescriptlang.org/tsconfig
	"compilerOptions": {
		// Type Checking
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"strict": true,
		"useUnknownInCatchVariables": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"allowJs": true,

		// Modules
		"module": "Node16",
		"moduleResolution": "Node16",
		"resolveJsonModule": true,

		// Emit
		"declaration": true,
		"importHelpers": true,
		"inlineSources": true,
		"newLine": "lf",
		"noEmitHelpers": true,
		"outDir": "dist",
		"rootDir": "src",
		"preserveConstEnums": true,
		"removeComments": false,
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		// Language and Environment
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["ESNext"],
		"target": "ES2021",
		"useDefineForClassFields": true,
		"baseUrl": ".",
		"paths": {
			// If you add new aliases, update eslintrc.json as well
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src/*.ts",
		"src/tts.js",
		"src/models/transcript.ts",
		"src/models/meeting.ts",
		"src/models/teno.ts",
		"src/utils/transcriptUtils.ts",
		"src/utils/transcriptionQueue.ts",
		"src/models/utterance.ts",
		"src/services/langchain.ts",
		"src/services/textToSpeech.ts",
		"src/services/transcriber.ts",
		"src/discord/interactions.ts",
		"src/discord/deploy.ts",
		"src/discord/recorder.ts"
	],
	"exclude": []
}
