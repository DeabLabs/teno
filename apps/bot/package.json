{
	"name": "bot",
	"version": "0.0.1",
	"description": "Discord Stenographer bot written using @discordjs/voice",
	"exports": "./dist/bot.js",
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"start": "node dist/bot",
		"dev": "tsup --watch --onSuccess \"node dist/bot.js\"",
		"lint": "eslint src --ext mjs,js,ts",
		"format": "eslint src --ext mjs,js,ts --fix",
		"build": "tsup",
		"build:check": "tsc --noEmit --incremental false",
		"test": "vitest",
		"test:ci": "vitest run",
		"ci": "tsc --noEmit && yarn test:ci && yarn build && yarn lint",
		"clean": "rimraf dist node_modules .turbo"
	},
	"author": "Blindmansion <blindmansion@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@deepgram/sdk": "^1.20.0",
		"@discordjs/opus": "^0.9.0",
		"@discordjs/voice": "^0.16.0",
		"@dqbd/tiktoken": "^1.0.2",
		"@google-cloud/text-to-speech": "^4.2.1",
		"database": "*",
		"date-fns": "^2.29.3",
		"discord.js": "^14.8.0",
		"dotenv": "^16.0.3",
		"kv": "*",
		"langchain": "^0.0.40",
		"microsoft-cognitiveservices-speech-sdk": "^1.27.0",
		"node-crc": "^1.3.2",
		"node-graceful": "^3.1.0",
		"ogg-opus-decoder": "^1.5.8",
		"prism-media": "^2.0.0-alpha.0",
		"rxjs": "^7.8.0",
		"sodium-native": "^4.0.1",
		"tiny-invariant": "^1.3.1",
		"znv": "^0.3.2",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@dword-design/eslint-plugin-import-alias": "^3.0.6",
		"@types/node": "^18.15.10",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"eslint": "^8.27.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.5.0",
		"eslint-plugin-import": "^2.26.0",
		"rimraf": "^4.4.1",
		"tsconfig": "*",
		"tsup": "^6.7.0",
		"typescript": "^5.0.3",
		"vitest": "^0.29.8"
	},
	"packageManager": "yarn@1.22.19"
}
